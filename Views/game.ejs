<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/home.css">
    <link rel="stylesheet" href="/game.css">
   
    <link rel="icon" size="512x512" href="/Assets/GamesImages/Icons/<%= game.id %>.png">
    <title><%= game.titolo %> - Candy Games</title>
</head>

<body>

    <nav class="NavBar">
        <div class="Logo">
            <a href="<%= locals.baseUrl %>">
                <img src="/Assets/Logo.png" alt="Candy Games Logo" class="LogoImg" />
            </a>
        </div>

        <button class="HamburgerButton" id="hamburger-button" aria-label="Toggle menu" aria-expanded="false">
            <span class="HamburgerLine"></span>
            <span class="HamburgerLine"></span>
            <span class="HamburgerLine"></span>
        </button>

        <ul class="NavLinks" id="nav-links">
            <li><a class="NormalLink" href="<%= locals.baseUrl %>">Home</a></li>
            <li><a class="NormalLink" href="<%= locals.baseUrl %>about">About</a></li>
            <li><a class="NormalLink" href="<%= locals.baseUrl %>login">Login</a></li>
        </ul>
    </nav>

    <div class="BodyCenteredContent">
        <div class="CenteredSection">
            <div class="GameInfosTop  TextColor_Dark3">
                <img class="FeaturedBannerImg BannerImg" src="/Assets/GamesImages/Banners/<%= game.id %>.png"
                    alt="Featured Image">

                    <div class="GameInfosTexts">
                        <h2>
                            <%= game.titolo %>
                        </h2>
                        <h3>
                            <%= game.short_desc %>
                        </h3>

                        <div class="FeaturedGameInfosGeneraAndRating">
                            <!-- Icona e nome del genere -->
                            <div class="Genre">
                                <img class="GenreIcon" src="/Assets/GeneraIcons/<%= game.genere %>.png"
                                    alt="<%= game.genere %> Icon">
                                <span class="GenreText">
                                    <%= game.genere %>
                                </span>
                            </div>

                            <!-- Rating con stella -->
                            <div class="Rating">
                                <img class="RatingIcon" src="/Assets/StarFull.png" alt="Rating Star">
                                <span class="RatingText">
                                    <%= game.rating %> / 5.0
                                </span>
                            </div>
                        </div>
                    </div>                
            </div>

            <div class="GameDescAndReviews TextColor_Dark3">
                <div class="SectionHalf">
                    <h1>
                        ‚ú¶ <%= game.titolo %> - <%= game.anno_uscita %> ‚ú¶
                    </h1>
                    <p>
                        <%- game.descrizione.replace(/(\r\n|\n|\r)/g, '<br>') %>
                    </p>
                </div>

                <div class="SectionHalf">
                    <h1>‚ú¶ Reviews ‚ú¶</h1>
                    <div class="ReviewsCon">
                        <div class="Review">
                            <div class="ReviewStarsCon">
                                <img class="RatingIcon" src="/Assets/StarFull.png" alt="Rating Star">
                                <h3>5</h3>
                            </div>
                            <img src="/Users/pfp/1.jpg" alt="" class="Review_pfp">
                            
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>


    <footer class="MotivationalFooter TextColor_Dark3">
        <p id="quote-text">üåü Stay sweet, keep going. üç¨</p>
        <p>‚ú¶ Candy Games || contact@abcia2.com ‚ú¶</p>
    </footer>


    <script src="/script.js"></script>
</body>

</html>